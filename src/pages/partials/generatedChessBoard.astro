---
export const partial = true;
export const prerender = false;

import { allChess960Positions } from "@/data/allChess960Positions";
import BlankChessBoard from "@/components/ChessBoard.astro";

function getRandomNumberBetween0And960(): number {
	return Math.floor(Math.random() * 960);
}

function getRandomPosition() {
	const randomIndex = getRandomNumberBetween0And960();
	return allChess960Positions[randomIndex];
}

const startingPosition = getRandomPosition();
---

<BlankChessBoard pieces={[...startingPosition]} />
